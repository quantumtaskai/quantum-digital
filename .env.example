# Environment Variables for Dokploy Deployment

# Django Core Settings
SECRET_KEY=your-secret-key-here-generate-with-django-get-random-secret-key
DEBUG=False

# Domain Configuration (REQUIRED for Dokploy)
DOMAIN=your-domain.com
ALLOWED_HOSTS=your-domain.com,www.your-domain.com
CSRF_TRUSTED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Database (Use Dokploy Managed PostgreSQL)
# Create PostgreSQL database in Dokploy UI, then copy the DATABASE_URL
DATABASE_URL=postgresql://username:password@postgres-host:5432/database_name

# Social Authentication (OAuth)
# Configure these in Django admin at /admin/socialaccount/socialapp/
# Or set them here if you prefer environment variables

# Google OAuth2 (Optional - can be set in admin)
GOOGLE_OAUTH2_CLIENT_ID=
GOOGLE_OAUTH2_CLIENT_SECRET=

# Optional: Superuser Auto-creation (First deployment only)
# DJANGO_SUPERUSER_EMAIL=admin@your-domain.com
# DJANGO_SUPERUSER_PASSWORD=secure-password-here

# Application Settings
DJANGO_SETTINGS_MODULE=quantum_digital.settings
